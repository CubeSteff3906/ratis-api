  <link rel="stylesheet" type="text/css" href="styles/popup.css">
  <script>
    window.addEventListener('DOMContentLoaded', (event) => {
      var inputElement = document.getElementById('myInput');
      inputElement.focus();
      inputElement.select();
    })
